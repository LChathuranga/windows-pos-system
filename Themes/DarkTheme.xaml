<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors - Jaegar Resto Style -->
    
    <!-- Primary Backgrounds -->
    <SolidColorBrush x:Key="PrimaryBg" Color="#1E1F2D"/>
    <SolidColorBrush x:Key="SecondaryBg" Color="#2B2D42"/>
    <SolidColorBrush x:Key="CardBg" Color="#353849"/>
    
    <!-- Accent & Interactive Colors -->
    <SolidColorBrush x:Key="AccentColor" Color="#EF8275"/>
    <SolidColorBrush x:Key="AccentHover" Color="#FF9184"/>
    <SolidColorBrush x:Key="AccentPressed" Color="#DC6E64"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#A0A3B8"/>
    <SolidColorBrush x:Key="TextTertiary" Color="#808396"/>
    <SolidColorBrush x:Key="TextDisabled" Color="#5A5C69"/>
    
    <!-- Border & Divider Colors -->
    <SolidColorBrush x:Key="BorderColor" Color="#4A4D62"/>
    <SolidColorBrush x:Key="BorderLight" Color="#3C3F52"/>
    <SolidColorBrush x:Key="DividerColor" Color="#373A4B"/>
    
    <!-- Interactive States -->
    <SolidColorBrush x:Key="HoverColor" Color="#4A4D62"/>
    <SolidColorBrush x:Key="ActiveColor" Color="#EF8275"/>
    <SolidColorBrush x:Key="FocusColor" Color="#EF8275"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#50C878"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FFB347"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#FF6B6B"/>
    <SolidColorBrush x:Key="InfoColor" Color="#63B3ED"/>
    
    <!-- Additional UI Colors -->
    <SolidColorBrush x:Key="DisabledColor" Color="#3C3F52"/>
    <SolidColorBrush x:Key="ShadowColor" Color="#50000000"/>
    <SolidColorBrush x:Key="OverlayColor" Color="#96000000"/>
    
    <!-- Sidebar Specific -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#353849"/>
    <SolidColorBrush x:Key="SidebarIconActive" Color="#EF8275"/>
    <SolidColorBrush x:Key="SidebarIconInactive" Color="#A0A3B8"/>
    
    <!-- Input Fields -->
    <SolidColorBrush x:Key="InputBackground" Color="#3A3D52"/>
    <SolidColorBrush x:Key="InputBorder" Color="#4A4D62"/>
    <SolidColorBrush x:Key="InputFocusBorder" Color="#EF8275"/>
    
    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollbarTrack" Color="#2B2D42"/>
    <SolidColorBrush x:Key="ScrollbarThumb" Color="#4A4D62"/>
    <SolidColorBrush x:Key="ScrollbarThumbHover" Color="#5A5D73"/>
    
    <!-- Legacy compatibility (maps old names to new colors) -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1F2D"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#2B2D42"/>
    <SolidColorBrush x:Key="CardBrush" Color="#353849"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#EF8275"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#A0A3B8"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#4A4D62"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#4A4D62"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#50C878"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#FF6B6B"/>
    <SolidColorBrush x:Key="InputBrush" Color="#3A3D52"/>
    
</ResourceDictionary>
