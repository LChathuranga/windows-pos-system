<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors - Option B: Green Accent palette -->

    <!-- Primary Backgrounds -->
    <SolidColorBrush x:Key="PrimaryBg" Color="#0F1210"/>
    <SolidColorBrush x:Key="SecondaryBg" Color="#131615"/>
    <SolidColorBrush x:Key="CardBg" Color="#162016"/>

    <!-- Accent & Interactive Colors (green accents) -->
    <SolidColorBrush x:Key="AccentColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="Accent2" Color="#8BC34A"/>
    <SolidColorBrush x:Key="AccentHover" Color="#66BB6A"/>
    <SolidColorBrush x:Key="AccentPressed" Color="#3E8E3A"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#EEF6EE"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#BFCFC0"/>
    <SolidColorBrush x:Key="TextTertiary" Color="#98A497"/>
    <SolidColorBrush x:Key="TextDisabled" Color="#6E726E"/>

    <!-- Border & Divider Colors (user palette) -->
    <SolidColorBrush x:Key="BorderColor" Color="#444444"/>
    <SolidColorBrush x:Key="BorderLight" Color="#333333"/>
    <SolidColorBrush x:Key="DividerColor" Color="#2E2E2E"/>

    <!-- Interactive States -->
    <SolidColorBrush x:Key="HoverColor" Color="#18321A"/>
    <SolidColorBrush x:Key="ActiveColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="FocusColor" Color="#8BC34A"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F0A500"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#E64E3B"/>
    <SolidColorBrush x:Key="InfoColor" Color="#8BC34A"/>

    <!-- Additional UI Colors -->
    <SolidColorBrush x:Key="DisabledColor" Color="#121212"/>
    <SolidColorBrush x:Key="ShadowColor" Color="#50000000"/>
    <SolidColorBrush x:Key="OverlayColor" Color="#96000000"/>

    <!-- Sidebar Specific -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#0D100E"/>
    <SolidColorBrush x:Key="SidebarIconActive" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SidebarIconInactive" Color="#8A948A"/>
    <SolidColorBrush x:Key="SidebarHoverIconColor" Color="#A8E6A1"/>
    <SolidColorBrush x:Key="SidebarHoverColor" Color="#18321A"/>

    <!-- Input Fields -->
    <SolidColorBrush x:Key="InputBackground" Color="#202020"/>
    <SolidColorBrush x:Key="InputBorder" Color="#444444"/>
    <SolidColorBrush x:Key="InputFocusBorder" Color="#FF6F61"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollbarTrack" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="ScrollbarThumb" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="ScrollbarThumbHover" Color="#3A3A3A"/>
    
    <!-- Legacy compatibility block removed: light/modern theme keys used instead -->
    
</ResourceDictionary>
