<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Colors - Jaegar Resto Style -->
    
    <!-- Primary Backgrounds -->
    <SolidColorBrush x:Key="PrimaryBg" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="SecondaryBg" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBg" Color="#FFFFFF"/>
    
    <!-- Accent & Interactive Colors -->
    <SolidColorBrush x:Key="AccentColor" Color="#EF8275"/>
    <SolidColorBrush x:Key="AccentHover" Color="#FF9184"/>
    <SolidColorBrush x:Key="AccentPressed" Color="#DC6E64"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#212529"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#6C757D"/>
    <SolidColorBrush x:Key="TextTertiary" Color="#868E96"/>
    <SolidColorBrush x:Key="TextDisabled" Color="#ADB5BD"/>
    
    <!-- Border & Divider Colors -->
    <SolidColorBrush x:Key="BorderColor" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="BorderLight" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="DividerColor" Color="#CED4DA"/>
    
    <!-- Interactive States -->
    <SolidColorBrush x:Key="HoverColor" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="ActiveColor" Color="#EF8275"/>
    <SolidColorBrush x:Key="FocusColor" Color="#EF8275"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#28A745"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FFC107"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#DC3545"/>
    <SolidColorBrush x:Key="InfoColor" Color="#17A2B8"/>
    
    <!-- Additional UI Colors -->
    <SolidColorBrush x:Key="DisabledColor" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="ShadowColor" Color="#28000000"/>
    <SolidColorBrush x:Key="OverlayColor" Color="#78000000"/>
    
    <!-- Sidebar Specific -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SidebarIconActive" Color="#EF8275"/>
    <SolidColorBrush x:Key="SidebarIconInactive" Color="#6C757D"/>
    
    <!-- Input Fields -->
    <SolidColorBrush x:Key="InputBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorder" Color="#CED4DA"/>
    <SolidColorBrush x:Key="InputFocusBorder" Color="#EF8275"/>
    
    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollbarTrack" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="ScrollbarThumb" Color="#CED4DA"/>
    <SolidColorBrush x:Key="ScrollbarThumbHover" Color="#ADB5BD"/>
    
    <!-- Legacy compatibility (maps old names to new colors) -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#EF8275"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212529"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6C757D"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#28A745"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#DC3545"/>
    <SolidColorBrush x:Key="InputBrush" Color="#FFFFFF"/>
    
</ResourceDictionary>
