<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Backgrounds -->
    <!-- Light background: neutral gray tones -->
    <SolidColorBrush x:Key="PrimaryBg" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="SecondaryBg" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="CardBg" Color="#FBFBFB"/>
    
    <!-- Accent & Interactive Colors (green accents) -->
    <SolidColorBrush x:Key="AccentColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="AccentHover" Color="#66BB6A"/>
    <SolidColorBrush x:Key="AccentPressed" Color="#3E8E3A"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#1B1F1B"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#6E7A6E"/>
    <SolidColorBrush x:Key="TextTertiary" Color="#8A948A"/>
    <SolidColorBrush x:Key="TextDisabled" Color="#A3A79F"/>
    
    <!-- Border & Divider Colors -->
    <SolidColorBrush x:Key="BorderColor" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="BorderLight" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="DividerColor" Color="#CED4DA"/>
    
    <!-- Interactive States -->
    <SolidColorBrush x:Key="HoverColor" Color="#F1FAF1"/>
    <SolidColorBrush x:Key="ActiveColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="FocusColor" Color="#8BC34A"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F0A500"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#E64E3B"/>
    <SolidColorBrush x:Key="InfoColor" Color="#8BC34A"/>
    
    <!-- Additional UI Colors -->
    <SolidColorBrush x:Key="DisabledColor" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="ShadowColor" Color="#28000000"/>
    <SolidColorBrush x:Key="OverlayColor" Color="#78000000"/>
    
    <!-- Sidebar Specific -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SidebarIconActive" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SidebarIconInactive" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="SidebarHoverIconColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SidebarHoverColor" Color="#E8F5E9"/>
    
    <!-- Input Fields -->
    <SolidColorBrush x:Key="InputBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorder" Color="#CED4DA"/>
    <SolidColorBrush x:Key="InputFocusBorder" Color="#FF6F61"/>
    
    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollbarTrack" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="ScrollbarThumb" Color="#CED4DA"/>
    <SolidColorBrush x:Key="ScrollbarThumbHover" Color="#ADB5BD"/>
    
    <!-- Legacy compatibility block removed: light/modern theme keys used instead -->
    
</ResourceDictionary>
