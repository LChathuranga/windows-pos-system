<Window x:Class="windows_pos_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:windows_pos_system.Views.Controls"
        Title="Jaegar Resto" Height="800" Width="1400"
    WindowStyle="SingleBorderWindow" ResizeMode="CanResizeWithGrip"
    Background="{DynamicResource PrimaryBg}">

<Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="35"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Main Content Grid (below top bar) -->
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <controls:Sidebar Grid.Column="0" x:Name="SidebarControl"/>

        <!-- Main Content Area -->
        <controls:MainContent Grid.Column="1" x:Name="MainContentControl"/>

        <!-- Order Panel -->
        <controls:OrderPanel Grid.Column="2" x:Name="OrderPanelControl"/>
    </Grid>
    </Grid>
</Window>