<UserControl x:Class="windows_pos_system.Views.Controls.OrderPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border Background="{DynamicResource CardBg}" CornerRadius="16,0,0,16" Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Order Header -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Orders #34562" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimary}"/>
                
                <!-- Order Type Tabs -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                    <Button Content="Dine In" Width="90" Height="35" 
                            Background="{DynamicResource AccentColor}" 
                            Foreground="White" BorderThickness="0" 
                            FontSize="13" Margin="0,0,10,0"/>
                    <Button Content="To Go" Width="90" Height="35" 
                            Background="{DynamicResource SecondaryBg}" 
                            Foreground="{DynamicResource TextSecondary}" 
                            BorderThickness="0" FontSize="13" Margin="0,0,10,0"/>
                    <Button Content="Delivery" Width="90" Height="35" 
                            Background="{DynamicResource SecondaryBg}" 
                            Foreground="{DynamicResource TextSecondary}" 
                            BorderThickness="0" FontSize="13"/>
                </StackPanel>
            </StackPanel>

            <!-- Order Items Header -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Item" FontSize="14" Foreground="{DynamicResource TextSecondary}" 
                           HorizontalAlignment="Left"/>
                <TextBlock Text="Qty" FontSize="14" Foreground="{DynamicResource TextSecondary}" 
                           HorizontalAlignment="Center" Margin="60,0,0,0"/>
                <TextBlock Text="Price" FontSize="14" Foreground="{DynamicResource TextSecondary}" 
                           HorizontalAlignment="Right"/>
            </Grid>

            <!-- Order Items List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding CartItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Order Item -->
                            <Border Background="{DynamicResource SecondaryBg}" CornerRadius="10" 
                                    Padding="12" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="0">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="40" Height="40" Background="{DynamicResource SecondaryBg}" CornerRadius="20" BorderBrush="{DynamicResource BorderColor}" BorderThickness="2">
                                                <TextBlock Text="ï¿½ï¸" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Product.Name}" FontSize="13" 
                                                           Foreground="{DynamicResource TextPrimary}" TextTrimming="CharacterEllipsis" MaxWidth="110"/>
                                                <TextBlock FontSize="12" Foreground="{DynamicResource TextSecondary}">
                                                    <Run Text="$"/>
                                                    <Run Text="{Binding Product.Price, StringFormat='{}{0:F2}'}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,60,0">
                                            <Button Content="-" Width="25" Height="25" FontSize="16" FontWeight="Bold"
                                                    Background="{DynamicResource CardBg}" 
                                                    Foreground="{DynamicResource TextPrimary}"
                                                    BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"
                                                    Click="DecreaseQuantity_Click" Tag="{Binding}"/>
                                            <TextBlock Text="{Binding Quantity}" Width="30" FontSize="14" 
                                                       Foreground="{DynamicResource TextPrimary}" 
                                                       TextAlignment="Center" VerticalAlignment="Center" Margin="5,0"/>
                                            <Button Content="+" Width="25" Height="25" FontSize="16" FontWeight="Bold"
                                                    Background="{DynamicResource CardBg}" 
                                                    Foreground="{DynamicResource TextPrimary}"
                                                    BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"
                                                    Click="IncreaseQuantity_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                        
                                        <TextBlock FontSize="14" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextPrimary}" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Run Text="$"/>
                                            <Run Text="{Binding TotalPrice, Mode=OneWay, StringFormat='{}{0:F2}'}"/>
                                        </TextBlock>
                                    </Grid>
                                    
                                    <Grid Grid.Row="1" Margin="0,10,0,0">
                                        <TextBox Background="{DynamicResource CardBg}" BorderBrush="{DynamicResource BorderColor}"
                                                 Foreground="{DynamicResource TextSecondary}" Height="35" 
                                                 Text="Order Note..." FontSize="12" Padding="10,8" Width="220" HorizontalAlignment="Left"/>
                                        <Button Content="ðŸ—‘ï¸" Width="35" Height="35" HorizontalAlignment="Right"
                                                Background="#E81123" BorderThickness="0" 
                                                Foreground="White"
                                                Click="RemoveFromCart_Click" Tag="{Binding}" Cursor="Hand"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Order Summary -->
            <StackPanel Grid.Row="3" Margin="0,20,0,0">
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="Discount" FontSize="14" Foreground="{DynamicResource TextSecondary}"/>
                    <TextBlock Text="$0" FontSize="14" Foreground="{DynamicResource TextPrimary}" 
                               HorizontalAlignment="Right"/>
                </Grid>
                <Grid Margin="0,0,0,15">
                    <TextBlock Text="Sub total" FontSize="14" Foreground="{DynamicResource TextSecondary}"/>
                    <TextBlock FontSize="14" Foreground="{DynamicResource TextPrimary}" 
                               HorizontalAlignment="Right">
                        <Run Text="$"/>
                        <Run Text="{Binding TotalAmount, StringFormat='{}{0:F2}'}"/>
                    </TextBlock>
                </Grid>
            </StackPanel>

            <!-- Payment Button -->
            <Button Grid.Row="4" Content="Continue to Payment" Height="50" 
                    Background="{DynamicResource AccentColor}" Foreground="White" 
                    BorderThickness="0" FontSize="15" FontWeight="SemiBold" 
                    Cursor="Hand" Click="CompleteSale_Click"/>
        </Grid>
    </Border>
    
</UserControl>
