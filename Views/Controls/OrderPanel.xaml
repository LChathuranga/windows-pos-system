<UserControl x:Class="windows_pos_system.Views.Controls.OrderPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border Background="{DynamicResource CardBg}" CornerRadius="16,0,0,16" Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Order Header -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Orders #34562" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimary}"/>
                
                <!-- Order Type Tabs -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                    <Button Content="Dine In" Width="90" Height="35" 
                            Background="{DynamicResource AccentColor}" 
                            Foreground="White" BorderThickness="0" 
                            FontSize="13" Margin="0,0,10,0"/>
                    <Button Content="To Go" Width="90" Height="35" 
                            Background="{DynamicResource SecondaryBg}" 
                            Foreground="{DynamicResource TextSecondary}" 
                            BorderThickness="0" FontSize="13" Margin="0,0,10,0"/>
                    <Button Content="Delivery" Width="90" Height="35" 
                            Background="{DynamicResource SecondaryBg}" 
                            Foreground="{DynamicResource TextSecondary}" 
                            BorderThickness="0" FontSize="13"/>
                </StackPanel>
            </StackPanel>

            <!-- Order Items Header -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Item" FontSize="14" Foreground="{DynamicResource TextSecondary}" 
                           HorizontalAlignment="Left"/>
                <TextBlock Text="Qty" FontSize="14" Foreground="{DynamicResource TextSecondary}" 
                           HorizontalAlignment="Center" Margin="60,0,0,0"/>
                <TextBlock Text="Price" FontSize="14" Foreground="{DynamicResource TextSecondary}" 
                           HorizontalAlignment="Right"/>
            </Grid>

            <!-- Order Items List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Order Item 1 -->
                    <Border Background="{DynamicResource SecondaryBg}" CornerRadius="10" 
                            Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="40" Height="40" Background="#F0F0F0" CornerRadius="20">
                                        <TextBlock Text="ðŸœ" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Spicy seasoned sea..." FontSize="13" 
                                                   Foreground="{DynamicResource TextPrimary}"/>
                                        <TextBlock Text="$ 2.29" FontSize="12" 
                                                   Foreground="{DynamicResource TextSecondary}"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <TextBox Text="2" Width="40" Height="30" Background="{DynamicResource CardBg}" 
                                         Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource BorderColor}"
                                         TextAlignment="Center" HorizontalAlignment="Right" Margin="0,0,60,0"/>
                                
                                <TextBlock Text="$ 4.58" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextPrimary}" 
                                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <Grid Grid.Row="1" Margin="0,10,0,0">
                                <TextBox Background="{DynamicResource CardBg}" BorderBrush="{DynamicResource BorderColor}"
                                         Foreground="{DynamicResource TextSecondary}" Height="35" 
                                         Text="Order Note..." FontSize="12" Padding="10,8"/>
                                <Button Content="ðŸ—‘ï¸" Width="35" Height="35" HorizontalAlignment="Right"
                                        Background="Transparent" BorderThickness="1" 
                                        BorderBrush="{DynamicResource AccentColor}" 
                                        Foreground="{DynamicResource AccentColor}"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Order Item 2 -->
                    <Border Background="{DynamicResource SecondaryBg}" CornerRadius="10" 
                            Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="40" Height="40" Background="#F0F0F0" CornerRadius="20">
                                    <TextBlock Text="ðŸ" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Salted pasta with mu..." FontSize="13" 
                                               Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock Text="$ 2.69" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <TextBox Text="1" Width="40" Height="30" Background="{DynamicResource CardBg}" 
                                     Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource BorderColor}"
                                     TextAlignment="Center" HorizontalAlignment="Right" Margin="0,0,60,0"/>
                            
                            <TextBlock Text="$ 2.69" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimary}" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Order Item 3 -->
                    <Border Background="{DynamicResource SecondaryBg}" CornerRadius="10" 
                            Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="40" Height="40" Background="#F0F0F0" CornerRadius="20">
                                    <TextBlock Text="ðŸ²" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Spicy instant noodle..." FontSize="13" 
                                               Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock Text="$ 3.49" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <TextBox Text="3" Width="40" Height="30" Background="{DynamicResource CardBg}" 
                                     Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource BorderColor}"
                                     TextAlignment="Center" HorizontalAlignment="Right" Margin="0,0,60,0"/>
                            
                            <TextBlock Text="$ 10.47" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimary}" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Order Summary -->
            <StackPanel Grid.Row="3" Margin="0,20,0,0">
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="Discount" FontSize="14" Foreground="{DynamicResource TextSecondary}"/>
                    <TextBlock Text="$0" FontSize="14" Foreground="{DynamicResource TextPrimary}" 
                               HorizontalAlignment="Right"/>
                </Grid>
                <Grid Margin="0,0,0,15">
                    <TextBlock Text="Sub total" FontSize="14" Foreground="{DynamicResource TextSecondary}"/>
                    <TextBlock Text="$ 21.03" FontSize="14" Foreground="{DynamicResource TextPrimary}" 
                               HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- Payment Button -->
            <Button Grid.Row="4" Content="Continue to Payment" Height="50" 
                    Background="{DynamicResource AccentColor}" Foreground="White" 
                    BorderThickness="0" FontSize="15" FontWeight="SemiBold" 
                    Cursor="Hand" Click="CompleteSale_Click"/>
        </Grid>
    </Border>
    
</UserControl>
