<UserControl x:Class="windows_pos_system.Views.Controls.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:windows_pos_system.Converters"
             xmlns:System="clr-namespace:System;assembly=mscorlib">
    <UserControl.Resources>
    <conv:ImagePathToImageSourceConverter x:Key="ImagePathToImageSourceConverter" />
           <conv:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid Margin="30,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <TextBlock Text="Jaegar Resto" FontSize="26" FontWeight="Bold" 
                           Foreground="{DynamicResource TextPrimary}"/>
                <TextBlock Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='{}{0:dddd, d MMM yyyy}'}" FontSize="14" 
                           Foreground="{DynamicResource TextSecondary}" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Search Box -->
            <Border Background="{DynamicResource SecondaryBg}" CornerRadius="8" 
                    Width="320" Height="45" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Grid>
                    <TextBlock Text="ðŸ”" FontSize="18" Foreground="{DynamicResource TextSecondary}" 
                               VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <TextBox x:Name="SearchBox" Background="Transparent" BorderThickness="0" 
                             Foreground="{DynamicResource TextPrimary}" FontSize="14"
                             VerticalAlignment="Center" Margin="45,0,15,0"
                             TextChanged="SearchBox_TextChanged"
                             GotFocus="SearchBox_GotFocus"
                             LostFocus="SearchBox_LostFocus"/>
                    <TextBlock x:Name="SearchPlaceholder" 
                               Text="Search for food, coffee, etc.." 
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondary}"
                               VerticalAlignment="Center" 
                               Margin="45,0,15,0"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Category Tabs -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Categories}" Margin="0,30,0,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" ItemHeight="48"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="8,0,8,0">
                            <Button x:Name="CategoryBtn" Content="{Binding Name}"
                                    Click="Category_Click"
                                    Tag="{Binding}"
                                    Style="{StaticResource CategoryButtonStyle}"/>
                            <Rectangle Height="4" Fill="{DynamicResource AccentColor}" HorizontalAlignment="Left"
                                       Width="{Binding ElementName=CategoryBtn, Path=ActualWidth}"
                                       Margin="0,6,0,0">
                                <Rectangle.Visibility>
                                    <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                                        <Binding Path="Name" />
                                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="DataContext.SelectedCategory" />
                                    </MultiBinding>
                                </Rectangle.Visibility>
                            </Rectangle>
                        </StackPanel>
                    </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    <!-- Active Category Underline removed (using per-button underline instead) -->

        <!-- Section Header -->
        <Grid Grid.Row="2" Margin="0,25,0,15">
            <TextBlock Text="Choose Dishes" FontSize="18" FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextPrimary}" HorizontalAlignment="Left"/>
            <ComboBox Width="120" Height="35" HorizontalAlignment="Right" 
                      Background="{DynamicResource CardBg}" Foreground="{DynamicResource TextPrimary}"
                      BorderBrush="{DynamicResource BorderColor}">
                <ComboBoxItem Content="Dine In" IsSelected="True"/>
                <ComboBoxItem Content="To Go"/>
                <ComboBoxItem Content="Delivery"/>
            </ComboBox>
        </Grid>

        <!-- Dishes Grid -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <WrapPanel Orientation="Horizontal">
                <!-- Dish Card 1 -->
                <ItemsControl x:Name="DishesItemsControl" ItemsSource="{Binding Products}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DishCardStyle}" Width="180"
                                    MouseLeftButtonDown="ProductCard_Click" 
                                    Tag="{Binding}">
                                <StackPanel>
                                    <Grid Width="140" Height="140" Margin="0,0,0,10">
                                        <Ellipse Width="140" Height="140" Stroke="{DynamicResource BorderColor}" StrokeThickness="3">
                                            <Ellipse.Fill>
                                                <ImageBrush Stretch="UniformToFill" ImageSource="{Binding ImageUrl, Converter={StaticResource ImagePathToImageSourceConverter}}" />
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>
                                    <TextBlock Text="{Binding Name}" FontSize="15" 
                                               Foreground="{DynamicResource TextPrimary}" TextAlignment="Center" 
                                               TextWrapping="Wrap" Margin="0,0,0,8"/>
                                    <TextBlock FontSize="15" FontWeight="Bold" 
                                               Foreground="{DynamicResource TextPrimary}" TextAlignment="Center">
                                        <Run Text="$"/>
                                        <Run Text="{Binding Price, StringFormat='{}{0:F2}'}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12" 
                                               Foreground="{DynamicResource TextSecondary}" TextAlignment="Center" Margin="0,4,0,0">
                                        <Run Text="{Binding Stock}"/>
                                        <Run Text="Available"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
    
</UserControl>
