<UserControl x:Class="windows_pos_system.Views.Controls.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid Margin="30,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <TextBlock Text="Jaegar Resto" FontSize="26" FontWeight="Bold" 
                           Foreground="{DynamicResource TextPrimary}"/>
                <TextBlock Text="Tuesday, 2 Feb 2021" FontSize="14" 
                           Foreground="{DynamicResource TextSecondary}" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Search Box -->
            <Border Background="{DynamicResource SecondaryBg}" CornerRadius="8" 
                    Width="320" Height="45" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Grid>
                    <TextBlock Text="ðŸ”" FontSize="18" Foreground="{DynamicResource TextSecondary}" 
                               VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <TextBox x:Name="SearchBox" Background="Transparent" BorderThickness="0" 
                             Foreground="{DynamicResource TextSecondary}" FontSize="14"
                             VerticalAlignment="Center" Margin="45,0,15,0"
                             Text="Search for food, coffe, etc.."
                             TextChanged="SearchBox_TextChanged"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Category Tabs -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,30,0,0">
            <Button Content="Hot Dishes" Click="Category_Click" Style="{StaticResource ActiveCategoryButtonStyle}"/>
            <Button Content="Cold Dishes" Click="Category_Click" Style="{StaticResource CategoryButtonStyle}"/>
            <Button Content="Soup" Click="Category_Click" Style="{StaticResource CategoryButtonStyle}"/>
            <Button Content="Grill" Click="Category_Click" Style="{StaticResource CategoryButtonStyle}"/>
            <Button Content="Appetizer" Click="Category_Click" Style="{StaticResource CategoryButtonStyle}"/>
            <Button Content="Dessert" Click="Category_Click" Style="{StaticResource CategoryButtonStyle}"/>
        </StackPanel>

        <!-- Active Category Underline -->
        <Rectangle Grid.Row="1" Fill="{DynamicResource AccentColor}" Height="3" Width="80" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="16,0,0,0"/>

        <!-- Section Header -->
        <Grid Grid.Row="2" Margin="0,25,0,15">
            <TextBlock Text="Choose Dishes" FontSize="18" FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextPrimary}" HorizontalAlignment="Left"/>
            <ComboBox Width="120" Height="35" HorizontalAlignment="Right" 
                      Background="{DynamicResource CardBg}" Foreground="{DynamicResource TextPrimary}"
                      BorderBrush="{DynamicResource BorderColor}">
                <ComboBoxItem Content="Dine In" IsSelected="True"/>
                <ComboBoxItem Content="To Go"/>
                <ComboBoxItem Content="Delivery"/>
            </ComboBox>
        </Grid>

        <!-- Dishes Grid -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <WrapPanel Orientation="Horizontal">
                <!-- Dish Card 1 -->
                <Border Style="{StaticResource DishCardStyle}" Width="180">
                    <StackPanel>
                        <Border Width="140" Height="140" Margin="0,0,0,10" Background="#F0F0F0" CornerRadius="70">
                            <TextBlock Text="ðŸœ" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Spicy seasoned seafood noodles" FontSize="13" 
                                   Foreground="{DynamicResource TextPrimary}" TextAlignment="Center" 
                                   TextWrapping="Wrap" Margin="0,0,0,8"/>
                        <TextBlock Text="$ 2.29" FontSize="15" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimary}" TextAlignment="Center"/>
                        <TextBlock Text="20 Bowls available" FontSize="12" 
                                   Foreground="{DynamicResource TextSecondary}" TextAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Dish Card 2 -->
                <Border Style="{StaticResource DishCardStyle}" Width="180">
                    <StackPanel>
                        <Border Width="140" Height="140" Margin="0,0,0,10" Background="#F0F0F0" CornerRadius="70">
                            <TextBlock Text="ðŸ" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Salted Pasta with mushroom sauce" FontSize="13" 
                                   Foreground="{DynamicResource TextPrimary}" TextAlignment="Center" 
                                   TextWrapping="Wrap" Margin="0,0,0,8"/>
                        <TextBlock Text="$ 2.69" FontSize="15" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimary}" TextAlignment="Center"/>
                        <TextBlock Text="11 Bowls available" FontSize="12" 
                                   Foreground="{DynamicResource TextSecondary}" TextAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Dish Card 3 -->
                <Border Style="{StaticResource DishCardStyle}" Width="180">
                    <StackPanel>
                        <Border Width="140" Height="140" Margin="0,0,0,10" Background="#F0F0F0" CornerRadius="70">
                            <TextBlock Text="ðŸ¥Ÿ" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Beef dumpling in hot and sour soup" FontSize="13" 
                                   Foreground="{DynamicResource TextPrimary}" TextAlignment="Center" 
                                   TextWrapping="Wrap" Margin="0,0,0,8"/>
                        <TextBlock Text="$ 2.99" FontSize="15" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimary}" TextAlignment="Center"/>
                        <TextBlock Text="16 Bowls available" FontSize="12" 
                                   Foreground="{DynamicResource TextSecondary}" TextAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
    
</UserControl>
